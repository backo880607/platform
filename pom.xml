    <artifactId>platform-parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>platform</name>

    <modules>
        <module>platform-log</module>
        <module>platform-application</module>
        <module>platform-storage</module>
        <module>platform-user</module>
        <module>platform-notification</module>
        <module>platform-chat</module>
